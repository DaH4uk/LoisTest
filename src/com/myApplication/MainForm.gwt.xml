<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0//EN"
        "http://google-web-toolkit.googlecode.com/svn/releases/2.0/distro-source/core/src/gwt-module.dtd">
<module rename-to="MyApplication">

    <!-- Inherit the core Web Toolkit stuff.                  -->
    <inherits name='com.google.gwt.user.User'/>

    <!-- Other module inherits -->
    <inherits name='com.sencha.gxt.ui.GXT' /> <!-- <<<< Inherits the GXT Module -->


    <!-- GXT stylesheet -->
    <stylesheet src="reset.css" /> <!-- <<<< Sets up the GXT default stylesheet -->

    <!-- Neptune Theme -->
    <inherits name="com.sencha.gxt.theme.triton.Theme" />

    <!-- Specify the app entry point class.                   -->
    <entry-point class='com.myApplication.client.MainForm'/>


    <!-- Specify the app servlets.                   -->
    <servlet path='/MyApplicationService' class='com.myApplication.server.MainFormServiceImpl'/>


    <add-linker name="xsiframe"/>
    <set-configuration-property name="devModeRedirectEnabled" value="true"/>
    <!-- enable source maps -->
    <set-property name="compiler.useSourceMaps" value="true" />

    <!-- Specify the paths for translatable code -->
    <source path='client' />
    <source path='shared' />
</module>