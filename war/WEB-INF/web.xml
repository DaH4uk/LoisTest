<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <servlet>
        <servlet-name>com.myApplication.client.MainForm MainFormService</servlet-name>
        <servlet-class>com.myApplication.server.MainFormServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.myApplication.client.MainForm MainFormService</servlet-name>
        <url-pattern>/MyApplication/MainFormService</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>com.myApplication.client.CreateForm CreateFormService </servlet-name>
        <servlet-class>com.myApplication.server.CreateFormServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.myApplication.client.CreateForm CreateFormService</servlet-name>
        <url-pattern>/MyApplication/CreateFormService</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>MainForm.html</welcome-file>
    </welcome-file-list>

</web-app>
